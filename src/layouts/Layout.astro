---
interface Props {
  title: string
}

const baseUrl = import.meta.env.BASE_URL
const { title, subtitle, description, thumb } = Astro.props
const thumbUrl = `https://humo-tech.github.io${baseUrl}/${thumb}`
---

<!doctype html>
<html lang="ja">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href=`${baseUrl}/favicon.svg` />
    <meta name="generator" content={Astro.generator} />
    <title>{title} | 30DayMapChallenge 2023</title>
    <meta property="og:image" content={thumbUrl} />
    <meta name="description" content={description} />
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:site" content="@hrykyn" />
    <meta name="twitter:domain" content="humo-tech.github.io" />
    <meta name="twitter:title" content={`${title} | 30DayMapChallenge 2023`} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={thumbUrl} />
  </head>
  <body>
    <slot />
  </body>
</html>
<style is:global>
  :root {
    --accent: 136, 58, 234;
    --accent-light: 224, 204, 250;
    --accent-dark: 49, 10, 101;
    --accent-gradient: linear-gradient(45deg, rgb(var(--accent)), rgb(var(--accent-light)) 30%, white 60%);
  }
  html {
    font-family: system-ui, sans-serif;
    background: #13151a;
    background-size: 224px;
    width: 100%;
    height: 100%;
  }
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }
  code {
    font-family:
      Menlo,
      Monaco,
      Lucida Console,
      Liberation Mono,
      DejaVu Sans Mono,
      Bitstream Vera Sans Mono,
      Courier New,
      monospace;
  }
</style>
