---
import { type CollectionEntry, getCollection } from 'astro:content'
import Layout from '@/layouts/Layout.astro'
import Pages from '@/layouts/Pages.astro'

export async function getStaticPaths() {
  const posts = await getCollection('days')
  return posts.map((entry) => ({
    params: { slug: entry.slug },
    props: { entry },
  }))
}

type Props = CollectionEntry<'days'>

const { entry } = Astro.props
const { Content } = await entry.render()
---

<Layout title={entry.data.title} subtitle={entry.data.subtitle} description={entry.data.description}>
  <Pages title={entry.data.title} subtitle={entry.data.subtitle} description={entry.data.description}>
    <Content />
  </Pages>
</Layout>
